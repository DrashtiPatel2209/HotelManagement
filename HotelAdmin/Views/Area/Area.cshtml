@model HotelAdmin.Models.Area_model

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    
        <div class="panel">
                        <header class="panel-heading">
                            Area
                        </header>
                        <div class="panel-body">
                            <div class=" form">
                                <div class="cmxform form-horizontal adminex-form" id="commentForm">
                                    <div class="form-group ">
                                          @Html.Label("City Name", new { @class="control-label col-lg-2"})
                                       
                                        <div class="col-lg-10">
                                            
                                           
                                             @Html.DropDownList("CityID",(IEnumerable<SelectListItem>)ViewBag.city,"--Select--", new { @class="form-control"})

                                             @Html.ValidationMessageFor(model => model.CityID)
                                        </div>
                                    </div>
                                   
									<div class="form-group ">
                                        
                                        @Html.LabelFor(model => model.AreaName, new { @class="control-label col-lg-2"})
                                        <div class="col-lg-10">
                                            
                                             @Html.TextBoxFor(model => model.AreaName, new { @class="form-control"})
                                             @Html.ValidationMessageFor(model => model.AreaName)
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                      
                                         @Html.LabelFor(model => model.AreaDescription, new { @class="control-label col-lg-2"})
                                        <div class="col-lg-10">
                                            
                                             @Html.TextAreaFor(model => model.AreaDescription, new { @class="form-control"})
                                              @Html.ValidationMessageFor(model => model.AreaDescription)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <button class="btn btn-default" type="button">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
       

       

 }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

