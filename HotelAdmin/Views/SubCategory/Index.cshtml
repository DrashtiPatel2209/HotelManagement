@model IEnumerable<HotelAdmin.DBML.SubCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Dynamic Table
            <span class="tools pull-right">
                <a href="javascript:;" class="fa fa-chevron-down"></a>`
                <a href="javascript:;" class="fa fa-times"></a>
            </span>
                </header>
                <div class="panel-body">
                    <div class="adv-table">
                        <table class="display table table-bordered table-striped" id="dynamic-table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubcategoryName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubcategoryDescription)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MasterCategory.CategoryName)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubcategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubcategoryDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MasterCategory.CategoryName)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.SubcategoryID }) |
            @Html.ActionLink("Details", "Details", new { id = item.SubcategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SubcategoryID })
                                        </td>
                                    </tr>
                                }

                            </tbody>

                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubcategoryName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubcategoryDescription)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MasterCategory.CategoryName)
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
