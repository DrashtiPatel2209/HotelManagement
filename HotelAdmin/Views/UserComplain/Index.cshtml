@model HotelAdmin.Models.MasterComplain_model
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<h2>Complain</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

<div class="container_12">

	<!-- Filter -->
	<section class="grid_8">

		<div action="#" class="grey">

			<div class="half">
				
                    @Html.Label("User ID")	
               @Html.TextBoxFor(model => model.UserID)
                 @Html.ValidationMessageFor(model => model.UserID)
			</div>
            <div class="half">
				  @Html.Label("Complain Subject")	
               @Html.TextBoxFor(model => model.ComplainSubject)
                 @Html.ValidationMessageFor(model => model.ComplainSubject)
			</div>
			<div class="half">
				 @Html.Label("Complain Decsription")	
				<div class="textarea">
				  @Html.TextAreaFor(model => model.ComplainDescription)
                 @Html.ValidationMessageFor(model => model.ComplainDescription)
			</div>
			</div>

			

			<div class="clearfix"></div>

			<input type="submit" value="Submit" class="auto_width" />

		</div>

	</section>
    </div>
    }